<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="576.0" prefWidth="865.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RootLayoutController">
   <center>
      <AnchorPane fx:id="apAppRoot" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="vbContentRoot" alignment="CENTER" styleClass="card-table" stylesheets="@application.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox fx:id="hbHeader" alignment="CENTER" prefHeight="50.0" prefWidth="865.0">
                     <children>
                        <Label fx:id="lblTitle" alignment="CENTER" text="Blackjack">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="hbDealerSeat" alignment="CENTER" />
                  <Pane prefHeight="80.0" prefWidth="619.0">
                     <children>
                        <Label fx:id="lblThePot" alignment="CENTER" layoutX="11.0" layoutY="17.0" prefHeight="47.0" prefWidth="180.0" text="The Pot">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <HBox layoutX="101.0" layoutY="53.0" prefHeight="23.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" text="Total:" />
                              <Label fx:id="lblPotBalance">
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </Pane>
                  <HBox fx:id="hbPlayerSeats" alignment="CENTER" />
               </children>
            </VBox>
         </children></AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="btnAbout" mnemonicParsing="false" onAction="#aboutClick" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <Pane fx:id="pWelcome" prefHeight="551.0" prefWidth="246.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="vbWelcome" prefHeight="82.0" prefWidth="264.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="214.0" text="Welcome to Blackjack">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <Label prefHeight="32.0" prefWidth="232.0" text="Enter your name and click start to begin">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <HBox prefHeight="61.0" prefWidth="264.0" />
                  <HBox alignment="CENTER" prefHeight="39.0" prefWidth="264.0">
                     <children>
                        <Label text="Name: " />
                        <TextField fx:id="tfPlayerName" />
                        <Button fx:id="btnStartGame" mnemonicParsing="false" onAction="#startGame" text="Start" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="vbGameControls" layoutX="119.0" layoutY="143.0" prefHeight="408.0" prefWidth="127.0">
               <children>
                  <Button fx:id="btnNewHand" alignment="CENTER" mnemonicParsing="false" onAction="#newHand" prefWidth="99.0" text="Next Hand" />
               </children>
            </VBox>
         </children>
      </Pane>
   </left>
</BorderPane>
